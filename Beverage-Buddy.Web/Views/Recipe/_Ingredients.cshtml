
@model Ingredient

@using (Html.BeginCollectionItem("Recipe.Ingredients"))
{
    <div class="input-group mb-3">
        @Html.EditorFor(model => model.Amount, 
            new { htmlAttributes = new
            {
                @class = "form-control", 
                placeholder = "Amount",
                aria_label = "Amount"
            } })
     <span class="input-group-text">-</span>
        @Html.EditorFor(model => model.Name, 
            new { htmlAttributes = new
            {
                @class = "form-control", 
                placeholder = "Name",
                aria_label = "Name"
            } })
    </div>
}