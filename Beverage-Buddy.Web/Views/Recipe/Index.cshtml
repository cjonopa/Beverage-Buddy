@model IEnumerable<Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>DrinkType
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alcoholic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DrinkType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alcoholic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DrinkType)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-link" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-link" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-link" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
